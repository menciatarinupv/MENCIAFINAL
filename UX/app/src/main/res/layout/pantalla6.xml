<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pantalla6">

    <Button
        android:id="@+id/palabra1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="231dp"
        android:layout_marginBottom="14dp"
        android:onClick="botonPalabra1_pulsado"
        android:text="Initial Text"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintBottom_toTopOf="@+id/palabra2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoexcribe"/>

    <Button
        android:id="@+id/palabra2"
        android:layout_width="237dp"
        android:layout_height="67dp"
        android:layout_marginBottom="26dp"
        android:onClick="botonPalabra2_pulsado"
        android:text="Button"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/palabra3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/palabra1" />

    <Button
        android:id="@+id/palabra3"
        android:layout_width="238dp"
        android:layout_height="73dp"
        android:layout_marginBottom="26dp"
        android:onClick="botonPalabra3_pulsado"
        android:text="Button"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/palabra4"
        app:layout_constraintEnd_toEndOf="@+id/palabra4"
        app:layout_constraintStart_toStartOf="@+id/palabra4"
        app:layout_constraintTop_toBottomOf="@+id/palabra2" />

    <Button
        android:id="@+id/palabra4"
        android:layout_width="240dp"
        android:layout_height="74dp"
        android:layout_marginBottom="31dp"
        android:onClick="botonPalabra4_pulsado"
        android:text="Button"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/palabra5"
        app:layout_constraintEnd_toEndOf="@+id/palabra5"
        app:layout_constraintStart_toStartOf="@+id/palabra5"
        app:layout_constraintTop_toBottomOf="@+id/palabra3" />

    <Button
        android:id="@+id/palabra5"
        android:layout_width="240dp"
        android:layout_height="74dp"
        android:layout_marginStart="59dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="107dp"
        android:onClick="botonPalabra5_pulsado"
        android:text="Button"
        android:textSize="20sp"
        app:iconTint="#7FB541"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/palabra4" />

    <TextView
        android:id="@+id/textoexcribe"
        android:layout_width="278dp"
        android:layout_height="60dp"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="14dp"
        android:text="¿Cual será la palabra equivocada?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#452088"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/innecesario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/innecesario"
        android:layout_width="242dp"
        android:layout_height="47dp"
        android:layout_marginBottom="603dp"
        android:text="❓❓🔻💩 🥴"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.579"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textoexcribe" />
</androidx.constraintlayout.widget.ConstraintLayout>